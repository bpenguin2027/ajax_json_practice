
@{
    ViewBag.Title = "農村地方美食小吃特色料理";
}

<h2>@ViewBag.Title</h2>

<script>
    // 頁面開始，匿名函式運作
    $(document).ready(function () {
        //var dataUrl = "http://localhost:1079/ODwsvTravelFood.json";

        $.ajax({
            url: '/Home/GetJsonData',
            type: 'GET',
            success: function (data) {
                // 測試用訊息，如果成功再顯示
                alert("農村地方美食小吃特色料理共" + data.length + "筆紀錄");
                // 資料以迴圈跑 List
                for (var i = 0; i < data.length; i++) {
                    $("#tableShow").append
                        (
                            "<tr>" +
                            "<td>" + data[i].ID + "</td>" +
                            "<td>" + data[i].Name + "</td>" +
                            "<td>" + data[i].Address + "</td>" +
                            "<td>" + data[i].Tel + "</td>" +
                            "<td>" + data[i].HostWords + "</td>" +
                            "<td><img src='" + data[i].PicURL + "' style='width:200px'></td>" +
                            "<td><a href='https://www.google.com.tw/maps/place/" + data[i].Address +
                            " 'target='_blank' class=btn btn-info'>地圖</td>" + 
                            "</tr>"
                        );
                }
            }
        });
    });
</script>

<table class="table" id="tableShow">
    <tr>
        <th>ID</th>
        <th>名稱</th>
        <th>地址</th>
        <th>電話</th>
        <th>說明</th>
        <th>照片</th>
        <th></th>
    </tr>
</table>
